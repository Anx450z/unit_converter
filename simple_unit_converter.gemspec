Gem::Specification.new do |s|
  s.name        = 'simple_unit_converter'
  s.version     = '0.2.1'
  s.licenses    = ['MIT']
  s.summary     = "converts units to different units of measurements"
  s.description = "This gem helps to convert units to different measurements unit. example mph to kmph, to use:- 10.2.mile_per_hour.to_kilometer_per_hour or simply 10.2.mph.to_kmph. Refer github for more details"
  s.authors     = ["Ankur Chauhan"]
  s.email       = 'anx450z@gmail.com'
  s.files       = Dir["lib/**/*.rb"]
  s.metadata    = { "source_code_uri" => "https://github.com/Anx450z/unit_converter" }
end